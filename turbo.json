{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [
    "pnpm-lock.yaml",
    "**/.env.*local",
    "**/tsconfig*.json",
    "internal/node-utils/*.json",
    "internal/node-utils/src/**/*.ts",
    "internal/tailwind-config/src/**/*.ts",
    "internal/vite-config/*.json",
    "internal/vite-config/src/**/*.ts",
    "scripts/*/src/**/*.ts",
    "scripts/*/src/**/*.json"
  ],
  "globalEnv": ["NODE_ENV"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [
        "dist/**",
        "dist.zip",
        ".vitepress/dist.zip",
        ".vitepress/dist/**"
      ]
    },
    "build:native": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "preview": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "build:analyze": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "@vben/backend-mock#build": {
      "dependsOn": ["^build"],
      "outputs": [".nitro/**", ".output/**"]
    },
    "test:e2e": {},
    "dev": {
      "dependsOn": [],
      "outputs": [],
      "cache": false,
      "persistent": true
    },
    "typecheck": {
      "outputs": []
    },
    // Catalyst Native
    "@catalyst/native#build": {
      "dependsOn": ["^build", "@catalyst/web#build:native"],
      "outputs": ["out/**"]
    },
    "@catalyst/native#build:unpack": {
      "dependsOn": ["@catalyst/native#build", "@catalyst/web#build:native"],
      "outputs": ["dist/**", "release/**"]
    },
    "@catalyst/native#build:win": {
      "dependsOn": ["@catalyst/native#build"],
      "outputs": ["dist/**", "release/**"]
    },
    // Nexo Native
    "@nexo/native#build": {
      "dependsOn": ["^build", "@nexo/web#build:native"],
      "outputs": ["out/**"]
    },
    "@nexo/native#build:unpack": {
      "dependsOn": ["@nexo/native#build", "@nexo/web#build:native"],
      "outputs": ["dist/**", "release/**"]
    },
    "@nexo/native#build:win": {
      "dependsOn": ["@nexo/native#build"],
      "outputs": ["dist/**", "release/**"]
    }
  }
}
